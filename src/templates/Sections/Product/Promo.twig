<section class="s-product-promo is-s-padding bg-dark" data-controller="lib-ns">
    <div class="container">
        <div class="wrp_c_head flex items-center justify-between text-light">
            <div class="col">
                <h2 class="ui-heading" data-size="lg">Promoakce</h2>
            </div>
            <div class="col flex-row gap-4">
                <button class="ui-icon" aria-label="Předchozí" data-lib-ns-prev>
                    <svg><use href="#icon-arrow-left"></use></svg>
                </button>
                <button class="ui-icon" aria-label="Následující" data-lib-ns-next>
                    <svg><use href="#icon-arrow-right"></use></svg>
                </button>
            </div>
        </div>
        <div class="wrp_c_body flex rounded gap-5" data-lib-ns>
            {% for item in 1..3 %}
                <div class="col col-12">
                    <div class="c-product-promo-item">
                        <div class="col gap-5">
                            <strong class="ui-title text-primary uppercase" data-size="sm">Promoakce</strong>
                            <h3 class="ui-heading" data-size="md">Akce 3+1 zdarma</h3>
                            <div class="ui-text">
                                Mrkev Green Ways můžete snadno využít například při přípravě koktejlů a smoothie. Skvěle se hodí zejména pro studenou kuchyni, kde si zachová biologicky aktivní látky.
                            </div>
                        </div>
                        <div class="col">
                            <picture class="ui-image aspect-square">
                                <img src="{{ placeholder(340, 340) }}" loading="lazy" alt="">
                            </picture>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
